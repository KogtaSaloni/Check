<% provide(:title, 'Sign in') %>
<h1 class="sign_in_labels">Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, class: "sign_in_labels" %>
      <%= f.text_field :email, class: "sign_in_fields" %>

      <%= f.label :password, class: "sign_in_labels" %>
      <%= f.password_field :password, class: "sign_in_fields" %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary", id: "sign_in_account" %>
    <% end %>

  </div>
</div>
  <script>document.body.style.backgroundImage="url('/assets/dark_forest.jpg')";
  </script>
